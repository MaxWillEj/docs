{
  "$schema": "https://mintlify.com/schema.json",
  "theme": "mint",
  "name": "Tydli",
  "logo": {
    "dark": "/logo/dark.svg",
    "light": "/logo/light.svg",
    "href": "https://tydli.io"
  },
  "favicon": "/favicon.svg",
  "colors": {
    "primary": "#3B82F6",
    "light": "#60A5FA",
    "dark": "#1E40AF"
  },
  "navbar": {
    "links": [
      {
        "label": "Dashboard",
        "href": "https://tydli.io"
      }
    ],
    "primary": {
      "type": "github",
      "href": "https://github.com/MaxWillEj/tydliio"
    }
  },
  "navigation": {
    "tabs": [
      {
        "tab": "Documentation",
        "groups": [
          {
            "group": "Getting Started",
            "pages": [
              "introduction",
              "guides/user-guide"
            ]
          },
          {
            "group": "Guides",
            "pages": [
              "guides/oauth-integration"
            ]
          },
          {
            "group": "Support",
            "pages": [
              "support/troubleshooting",
              "support/faq"
            ]
          }
        ]
      },
      {
        "tab": "API Reference",
        "groups": [
          {
            "group": "API Overview",
            "pages": [
              "api-reference/overview",
              "api-reference/rate-limits"
            ]
          },
          {
            "group": "Technical Reference",
            "pages": [
              "api-reference/database-schema",
              "api-reference/mcp-compliance"
            ]
          }
        ]
      },
      {
        "tab": "Developers",
        "groups": [
          {
            "group": "Development",
            "pages": [
              "developers/architecture",
              "developers/developer-guide"
            ]
          },
          {
            "group": "Operations",
            "pages": [
              "operations/security",
              "operations/monitoring"
            ]
          }
        ]
      },
      {
        "tab": "Resources",
        "groups": [
          {
            "group": "Updates",
            "pages": [
              "resources/changelog"
            ]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "Dashboard",
          "href": "https://tydli.io",
          "icon": "gauge"
        },
        {
          "anchor": "GitHub",
          "href": "https://github.com/MaxWillEj/tydliio",
          "icon": "github"
        }
      ]
    }
  },
  "footer": {
    "socials": {
      "github": "https://github.com/MaxWillEj/tydliio",
      "website": "https://tydli.io"
    }
  }
}
