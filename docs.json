{
  "$schema": "https://mintlify.com/schema.json",
  "theme": "mint",
  "name": "Tydli",
  "logo": {
    "dark": "/logo/dark.svg",
    "light": "/logo/light.svg",
    "href": "https://tydli.io"
  },
  "favicon": "/favicon.svg",
  "colors": {
    "primary": "#3B82F6",
    "light": "#60A5FA",
    "dark": "#1E40AF",
    "background": {
      "dark": "#0F172A",
      "light": "#FFFFFF"
    },
    "anchors": {
      "from": "#3B82F6",
      "to": "#8B5CF6"
    }
  },
  "topbar": {
    "style": "default"
  },
  "topbarLinks": [
    {
      "name": "Dashboard",
      "url": "https://tydli.io"
    },
    {
      "name": "GitHub",
      "url": "https://github.com/MaxWillEj/tydliio"
    }
  ],
  "topbarCtaButton": {
    "type": "github",
    "url": "https://github.com/MaxWillEj/tydliio"
  },
  "primaryTab": {
    "name": "Documentation"
  },
  "tabs": [
    {
      "name": "API Reference",
      "url": "api-reference"
    },
    {
      "name": "Developers",
      "url": "developers"
    },
    {
      "name": "Resources",
      "url": "resources"
    }
  ],
  "navigation": [
    {
      "group": "Getting Started",
      "pages": [
        "introduction",
        "guides/user-guide"
      ]
    },
    {
      "group": "Guides",
      "pages": [
        "guides/oauth-integration"
      ]
    },
    {
      "group": "Support",
      "pages": [
        "support/troubleshooting",
        "support/faq"
      ]
    },
    {
      "group": "API Overview",
      "pages": [
        "api-reference/overview",
        "api-reference/rate-limits"
      ]
    },
    {
      "group": "Technical Reference",
      "pages": [
        "api-reference/database-schema",
        "api-reference/mcp-compliance"
      ]
    },
    {
      "group": "Development",
      "pages": [
        "developers/architecture",
        "developers/developer-guide"
      ]
    },
    {
      "group": "Operations",
      "pages": [
        "operations/security",
        "operations/monitoring"
      ]
    },
    {
      "group": "Updates",
      "pages": [
        "resources/changelog"
      ]
    }
  ],
  "footerSocials": {
    "github": "https://github.com/MaxWillEj/tydliio",
    "website": "https://tydli.io"
  },
  "feedback": {
    "thumbsRating": true,
    "suggestEdit": true,
    "raiseIssue": true
  },
  "search": {
    "prompt": "Search Tydli docs..."
  },
  "analytics": {
    "posthog": {
      "apiKey": "phc_your_posthog_key_here"
    }
  },
  "metadata": {
    "og:site_name": "Tydli Documentation",
    "og:type": "website",
    "og:image": "https://tydli.io/og-image.png",
    "twitter:card": "summary_large_image",
    "twitter:site": "@tydli"
  },
  "redirects": [
    {
      "source": "/docs/:path*",
      "destination": "/:path*"
    }
  ],
  "api": {
    "baseUrl": "https://nqfciqtsrcjorlqcglmq.supabase.co/functions/v1",
    "auth": {
      "method": "bearer"
    },
    "playground": {
      "mode": "simple"
    }
  }
